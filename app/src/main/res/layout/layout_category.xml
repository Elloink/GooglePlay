    <GridLayout
        android:id="@id/gridlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/category_card_padding_bottom"
        android:layout_marginLeft="@dimen/category_card_padding_left"
        android:layout_marginRight="@dimen/category_card_padding_right"
        android:layout_marginTop="@dimen/category_card_padding_top"
        android:columnCount="2"
        android:orientation="horizontal"
        android:splitMotionEvents="false">

        <ImageView
            android:id="@id/image"
            android:layout_width="173dp"
            android:layout_height="43dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/games"/>
        <ImageView
            android:id="@id/image"
            android:layout_width="173dp"
            android:layout_height="43dp"
