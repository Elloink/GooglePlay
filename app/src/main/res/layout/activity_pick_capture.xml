<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/pickimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@mipmap/photopick"
        android:drawablePadding="10dp"
        android:padding="15dp"
        android:text="Pick image       "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/captureimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@mipmap/photocapture"
        android:drawablePadding="10dp"
        android:padding="15dp"
        android:text="Capture image "
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <TextView
        android:id="@+id/pickvideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@mipmap/videopick"
        android:drawablePadding="10dp"
        android:padding="15dp"
        android:text="Pick video        "
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <TextView
        android:id="@+id/capturevideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@mipmap/videorecord"
        android:drawablePadding="10dp"
        android:padding="15dp"
        android:text="Capture video  "
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <ImageView
        android:id="@+id/imageview_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />


    <VideoView
        android:id="@+id/videoview_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>
